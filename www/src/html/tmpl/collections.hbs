<div class="pure-g">
  <form class="pure-form pure-u-1-1" style="padding-left:1em;padding-right:1em;">
    <input type="text" class="toolbar" placeholder="Search...">
  </form>
</div>

<div class="pure-g">

  <div class="pure-u-1-1 center" style="position:relative;z-index:11;" data-id="toolbar:collections:panel">
    <div class="pure-g">
      <div class="pure-u-2-3">
        {{#each this.Interactions}}
          <div class="pure-g">
            <div class="pure-u-1-1 center" style="background-color:#AAAAAA;overflow-x:hidden;text-overflow:ellipsis;">{{content}}</div>
          </div>
        {{/each}}
      </div>
      <div class="pure-u-1-3"></div>
    </div>
  </div>

  <div class="pure-u-1-1 collections" style="position:relative;z-index:12;left:{{this.Slide}}%;top:-{{this.PanelViewHeight}}px;">
    {{#each this.Collections}}
      <div style="background-color:#D0D0D0;margin:0.25em;cursor:pointer;" data-id="toolbar:collections:collection">
        <div class="pure-g center">
          <div class="pure-u-1-4"><img src="{{network_icon}}" class="collections_icon" style="margin:auto;margin-top:0.5em;width:1.5em;height:1.5em;"></div>
          <div class="pure-u-3-4 left"><h4 style="margin:0;">{{handle}}</h4><b>{{time}}</b></div>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="pure-u-1-1 center" style="position:relative;z-index:12;top:-{{this.PanelViewHeight}}px;">
    <div class="pure-g">
      <div class="pure-u-1-4"><a href="#">&#8592;</a></div>
      <div class="pure-u-1-2"></div>
      <div class="pure-u-1-4"><a href="#">&#8594;</a></div>
    </div>
  </div>

</div>
